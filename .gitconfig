[user]
    name = Ivan Kruglov
    email = ivan.kruglov@yahoo.com

[alias]
    co = checkout
    st = status
    ci = commit
    br = branch -vv
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[color]
    ui = auto
    diff = auto
    grep = auto
    branch = auto
    status = auto

[pull]
    rebase = true

[push]
    default = upstream

[grep]
    lineNumber = true
    extendedRegexp = true

[log]
    date = iso
    decorate = short
    abbrevCommit = true
