[user]
    name = Ivan Kruglov
    email = ivan.kruglov@yahoo.com

[alias]
    co = checkout
    st = status
    ci = commit
    br = branch -vv
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    loglive = !git --no-pager log --graph --pretty=oneline --decorate --abbrev-commit --all
    gr = log --color --date=relative --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --source --all --abbrev-commit -S 

[merge]
#    conflictstyle = diff3

[rerere]
    enabled = true

[color]
    ui = auto
    diff = auto
    grep = auto
    branch = auto
    status = auto

[pull]
    rebase = true

[push]
    default = upstream

[grep]
    lineNumber = true
    extendedRegexp = true

[log]
    #date = relative
    date = iso
    decorate = short
    abbrevCommit = true

[http]
	cookiefile = /Users/ikruglov/.gitcookies
